# Telegram bot token in format "<bot_id>:<token>"
TELEGRAM_TOKEN=your-telegram-token
# Public HTTPS URL for Telegram webhook (must be reachable from the internet)
TELEGRAM_WEBHOOK_URL=https://your-host.example/telegram/webhook
# Random secret to protect Telegram webhook endpoint (sent in X-Telegram-Bot-Api-Secret-Token)
TELEGRAM_SECRET_TOKEN=telegram-webhook-secret

# Botads API token (Client API auth)
BOTADS_API_TOKEN=your-botads-api-token

# Where to bind the local server
WEBHOOK_LISTEN_HOST=0.0.0.0
# Telegram accepts 8443 for webhooks (443/80/88/8443 are supported)
WEBHOOK_LISTEN_PORT=8443
# TLS certificate/key (generate via ./generate_selfsigned.sh <your-domain>)
WEBHOOK_TLS_CERT_FILE=certs/webhook.crt
WEBHOOK_TLS_KEY_FILE=certs/webhook.key

# Rewarded miniapp URL (the user will open it as a Telegram WebApp)
MINIAPP_URL=https://miniapp.example/launch
